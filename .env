# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token_here

# Email Configuration
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_specific_password  # Use App Password, not your regular Gmail password
RECIPIENT_EMAIL=recipient_email@example.com

# LinkedIn Configuration
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# Optional Configuration
CHECK_INTERVAL=3600  # Check for new emails every hour (in seconds)
MAX_EMAILS_TO_PROCESS=50  # Maximum number of emails to process at once

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=job_monitor.log

# Generic Login Credentials for Job Websites
GENERIC_LOGIN_EMAIL=your_generic_login_email@example.com
GENERIC_LOGIN_PASSWORD=your_generic_login_password

